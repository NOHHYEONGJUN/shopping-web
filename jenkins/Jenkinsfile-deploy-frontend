pipeline {
    agent any
    
    environment {
        SERVER_IP = credentials('jcloud-ip')
        SSH_PORT = credentials('backend-server-port')
        DOCKER_IMAGE = "0b6fa52889bf.ngrok.app/cluster/frontend"
        DOCKER_TAG = "v${env.BUILD_NUMBER}"
        SCANNER_HOME = tool 'SonarQube Scanner'
    }
    
    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
                sh 'docker system prune -af'
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm cache clean --force'
                    sh 'npm install'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -f frontend/Dockerfile ./frontend'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://0b6fa52889bf.ngrok.app', 'harbor-hyeongjun') {
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                    }
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
            sh 'docker system prune -af'
        }
    }
}